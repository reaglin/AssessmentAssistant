@page
@model AssessmentAssistant.Pages.UserSettings.CreateMeasurementPeriodModel

@{
    ViewData["Title"] = "CreateMeasurementPeriod";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CreateMeasurementPeriod</h1>

<h4>MeasurementPeriods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeasurementPeriods.MeasurementPeriod" class="control-label"></label>
                <input asp-for="MeasurementPeriods.MeasurementPeriod" class="form-control" />
                <span asp-validation-for="MeasurementPeriods.MeasurementPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>Current Available Measurement Periods</h4>
            <ul>
            @foreach(var mp in @Model.MeasurementPeriodList)
            {
                <li>@mp.Text</li>
            }
            </ul>
<div>
    <a asp-page="../Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
