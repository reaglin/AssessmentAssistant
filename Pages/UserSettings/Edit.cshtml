@page
@model AssessmentAssistant.Pages.UserSettings.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>UserSettings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserSettings.UserSettingsId" />
            <div class="form-group">
                <label asp-for="UserSettings.UserId" class="control-label"></label>
                <input asp-for="UserSettings.UserId" class="form-control" />
                <span asp-validation-for="UserSettings.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserSettings.MeasurementPeriod" class="control-label"></label>
                <input asp-for="UserSettings.MeasurementPeriod" class="form-control" />
                <span asp-validation-for="UserSettings.MeasurementPeriod" class="text-danger"></span>
            </div>
            <p>Available Measurement Periods</p>
            <ul>
            @foreach(var mp in @Model.MeasurementPeriodList)
            {
                <li>@mp.Text</li>
            }
            </ul>
            
            <div class="form-group" hidden>
                <label asp-for="UserSettings.AcademicProgramId" class="control-label"></label>
                <input asp-for="UserSettings.AcademicProgramId" class="form-control" />
                <span asp-validation-for="UserSettings.AcademicProgramId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
