@page
@model AssessmentAssistant.Pages.OutcomeMeasure.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Create Outcome Measures for @Model.CourseOfferingTitle()</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.CourseOutcomeNumber" class="control-label"></label>
                <input asp-for="OutcomeMeasure.CourseOutcomeNumber" class="form-control" />
                <span asp-validation-for="OutcomeMeasure.CourseOutcomeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.AssessmentType" class="control-label"></label>
                <textarea asp-for="OutcomeMeasure.AssessmentType" class="form-control" rows="5"></textarea>
                <span asp-validation-for="OutcomeMeasure.AssessmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.MeasurementStatement" class="control-label"></label>
                <textarea asp-for="OutcomeMeasure.MeasurementStatement" class="form-control" rows="5"></textarea>
                <span asp-validation-for="OutcomeMeasure.MeasurementStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.ThresholdValue" class="control-label"></label>
                <input asp-for="OutcomeMeasure.ThresholdValue" class="form-control" />
                <span asp-validation-for="OutcomeMeasure.ThresholdValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.NumberMeasured" class="control-label"></label>
                <input asp-for="OutcomeMeasure.NumberMeasured" class="form-control" />
                <span asp-validation-for="OutcomeMeasure.NumberMeasured" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.NumberMeetingThreshold" class="control-label"></label>
                <input asp-for="OutcomeMeasure.NumberMeetingThreshold" class="form-control" />
                <span asp-validation-for="OutcomeMeasure.NumberMeetingThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutcomeMeasure.CourseOfferingId" class="control-label"></label>
                <input asp-for="OutcomeMeasure.CourseOfferingId" class ="form-control" value="@Model.courseid" />
            </div>
            <div class="form-group" hidden>
                <label asp-for="OutcomeMeasure.MeasurementPeriod" class="control-label"></label>
                <input asp-for="OutcomeMeasure.MeasurementPeriod" class="form-control" value="@Model.MeasurementPeriod()" />
                <span asp-validation-for="OutcomeMeasure.MeasurementPeriod" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OutcomeMeasure.EnteredByUserName" class="control-label"></label>
                <input asp-for="OutcomeMeasure.EnteredByUserName" class="form-control"  value="@Model.UserId()" />
                <span asp-validation-for="OutcomeMeasure.EnteredByUserName" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OutcomeMeasure.RecordOwnerUserName" class="control-label"></label>
                <input asp-for="OutcomeMeasure.RecordOwnerUserName" class="form-control" value="@Model.UserId()"/>
                <span asp-validation-for="OutcomeMeasure.RecordOwnerUserName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>Course Outcomes for @Model.CourseOfferingTitle()</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseOutcomes[0].OutcomeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseOutcomes[0].OutcomeStatement)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CourseOutcomes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OutcomeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutcomeStatement)
            </td>
        </tr>
}
    </tbody>
</table>


<div>
    <a asp-page="Index?id=@Model.offeringid">Back to Course Offerings</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
