@page
@model AssessmentAssistant.Pages.AcademicProgram.CourseToProgramOutcomeMapModel

@{
    ViewData["Title"] = "CourseToProgramOutcomeMap";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
#outcomes {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#outcomes td, #outcomes th {
  border: 1px solid #ddd;
  padding: 8px;
}

#outcomes tr:nth-child(even){background-color: #f2f2f2;}

#outcomes tr:hover {background-color: #ddd;}

#outcomes th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
<h4>Course To Program Outcome Map @Html.DisplayFor(model => model.AcademicProgram.ProgramTitle)</h4>

<div>
    <table id="outcomes">
        <thead>
            <tr>
            <td><b>Course</b></td>
            @foreach(var item in @Model.ProgramOutcomes)
            {             
                <td>
                <div title="@item.OutcomeStatement">
                @item.OutcomeNumber
                </div>
             </td>
            }
            </tr>
        </thead>
        <tbody>
            @foreach(var course in @Model.AcademicCourses)
            {
            <tr>
            <td><b>@course.CourseTitle</b></td>
            @foreach(var outcome in @Model.ProgramOutcomes)
            {
                        <td>
                            @{
                                var fill = Model.FillCell(outcome, course); 
                                @:<div title="@fill">
                                if (fill == "")
                                    {
                                        @:
                                    }
                                    else
                                    {
                                        @: X
                                    }
                                    @: </div>
                                }
                   
             </td>
            }
            </tr>
            }
        </tbody>
    </table>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.ProgramTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.ProgramTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.ProgramDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.ProgramDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.MeasurementPeriod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.MeasurementPeriod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.EnteredByUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.EnteredByUserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.RecordOwnerUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.RecordOwnerUserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicProgram?.AcademicProgramId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
