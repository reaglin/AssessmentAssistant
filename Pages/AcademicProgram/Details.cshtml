@page
@model AssessmentAssistant.Pages.AcademicProgram.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Academic Program Details</h1>

<div>
    <h4>Academic Programs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.AcademicProgram.ProgramTitle)<br/>
            @Html.DisplayFor(model => model.AcademicProgram.ProgramDescription)
        </dd>


    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicProgram.AcademicProgramId">Edit Academic Program</a>|
    <a asp-page="./Index">Back to Program List</a><br/>

</div>
<hr/>
<h2> Academic Courses for Academic Program</h2>
<div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AcademicProgram.AcademicCourses)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @if (Model.AcademicProgram.AcademicCourses != null)
            {
                @foreach (var item in Model.AcademicCourses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseTitle)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.AcademicCourseId">Edit</a>                
                        </td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@item.AcademicCourseId">Details</a>
                        </td>
                    </tr>
                }
            }
    </tbody>
</table>
<hr/>
    <a asp-page="..AcademicCourse/Create"asp-route-id="@Model.AcademicProgram.AcademicProgramId">Add a Course to the Academic Program</a>
    <hr/>
<h2> Program Outcomes for Academic Program</h2>
<div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AcademicProgram.ProgramOutcomes)
            </th>
            <th></th>
            <th>Statement</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @if (Model.AcademicProgram.ProgramOutcomes != null)
            {
                @foreach (var item in Model.ProgramOutcomes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OutcomeNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OutcomeStatement)
                        </td>

                        <td>
                            <a asp-page="../ProgramOutcome/Edit" asp-route-id="@item.ProgramOutcomeId">Edit</a>                
                        </td>
                        <td>
                            <a asp-page="../ProgramOutcome/Details" asp-route-id="@item.ProgramOutcomeId">Details</a>
                        </td>
                        <td>
                            <a asp-page="../ProgramOutcome/Index" asp-route-id="@item.AcademicProgramId">Index</a>
                        </td>
                    </tr>
                }
            }
    </tbody>
</table>
<hr/>
    <a asp-page="../ProgramOutcome/Create"asp-route-id="@Model.AcademicProgram.AcademicProgramId">Add an Outcome to the Academic Program</a>

</div>
