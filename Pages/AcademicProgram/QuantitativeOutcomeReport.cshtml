@page
@model AssessmentAssistant.Pages.AcademicProgram.QuantitativeOutcomeReport

@{
    ViewData["Title"] = "QuantitativeOutcomeReport";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
#outcomes {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#outcomes td, #outcomes th {
  border: 1px solid #ddd;
  padding: 8px;
}

#outcomes tr:nth-child(even){background-color: #f2f2f2;}

#outcomes tr:hover {background-color: #ddd;}

#outcomes th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
<h4>Quantitative Outcome Report For  @Html.DisplayFor(model => model.AcademicProgram.ProgramTitle)</h4>
<div>
    @foreach(var item in @Model.ProgramOutcomes)
    {
         @item.OutcomeNumber 
         @item.OutcomeStatement
        <br/><br/>
        <table>
            <thead>
             <tr>
                <td>Course</td>
                <td>Outcome #</td>
                <td>Outcome Statement</td>
                <td>N</td>
                <td>N > Threshold</td>
                <td>Percent > Threshold</td>
                <td></td>
             </tr>
            </thead>
            <tbody>
             @foreach(var measures in @Model.MeasurementsTable)
                    {
                    <tr>
                      <td> @measures.Course</td>
                      <td> @measures.CourseOutcomeNumber </td>
                      <td> </td>
                      <td> @measures.N</td>
                      <td> @measures.N_AboveThreshold</td>
                      <td> @measures.Percent_N_Above_Threshold</td>
                      <td></td>
                    </tr>
                    } 
            </tbody>

        </table>
    
    }


</div>

  
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.ProgramTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.ProgramTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.ProgramDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.ProgramDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.MeasurementPeriod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.MeasurementPeriod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.EnteredByUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.EnteredByUserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicProgram.RecordOwnerUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicProgram.RecordOwnerUserName)
        </dd>
    </dl>
</div>
<div>
    <a href="./Details?id=@Model.AcademicProgram.AcademicProgramId">Back to Program</a>
</div>
